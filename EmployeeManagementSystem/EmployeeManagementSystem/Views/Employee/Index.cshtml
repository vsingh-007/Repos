@model IEnumerable<EmployeeManagementSystem.Models.Employee>
@{
    ViewBag.Title = "Index - Employee Management Application";
}

@Html.ActionLink("Create New", "Create")

<table id="tblEmployees">
    <tr>
        <th>@Html.DisplayNameFor(model => model.EmpId)</th>
        <th>@Html.DisplayNameFor(model => model.EmpName)</th>
        <th>@Html.DisplayNameFor(model => model.Job)</th>
        <th>@Html.DisplayNameFor(model => model.Salary)</th>
        <th>@Html.DisplayNameFor(model => model.DeptName)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.EmpId)</td>
            <td>@Html.DisplayFor(modelItem => item.EmpName)</td>
            <td>@Html.DisplayFor(modelItem => item.Job)</td>
            <td>@Html.DisplayFor(modelItem => item.Salary)</td>
            <td>@Html.DisplayFor(modelItem => item.DeptName)</td>
            <td>@Html.ActionLink("Details","Details", new { Id = "InkDetails-"+item.EmpId }) | @Html.ActionLink("Delete","Delete", new { Id = "InkDelete-" + item.EmpId })</td>

        </tr>
    }
    </table>
